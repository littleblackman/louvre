{% extends '::base.html.twig' %}
{% block body %}
<div class="container">
    <h1>Bienvenue sur le site du Louvre</h1>
    <div>
        <p>{{ billets.age }}</p>
    </div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="http://www.louvre.fr/sites/default/files/imagecache/940x500/medias/medias_images/images/louvre-carrousel-l-exterieur-du-louvre-abu-dhabi.jpg?1504684460" alt="Exterieur du louvre" style="width:100%;">
            </div>

            <div class="item">
                <img src="http://www.louvre.fr/sites/default/files/imagecache/940x500/medias/medias_images/images/louvre-carrousel-antoine-francois-callet-louis-xvi.jpg?1507216502" alt="Antoine Francois" style="width:100%;">
            </div>

            <div class="item">
                <img src="http://www.louvre.fr/sites/default/files/imagecache/940x500/medias/medias_images/images/louvre-carrouseltousmecenes.jpg?1508748261" alt="Livre" style="width:100%;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
{% endblock %}
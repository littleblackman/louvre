{% extends '::basePanier.html.twig' %}
{% block panier %}

    <article class="position-relative overflow-hidden p-3 p-md-5 m-md-3 bg-light">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.dateBillet, "Date de la visite") }}
                {{ form_errors(form.dateBillet) }}
                {{ form_widget(form.dateBillet) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.demiJournee) }}
                {{ form_errors(form.demiJournee) }}
                {{ form_widget(form.demiJournee) }}
            </div>
        </div>
        <br>
        {{ form_label(form.billet) }}
        {{ form_errors(form.billet) }}
        {{ form_widget(form.billet) }}
        <div class="row">
            <div class="col-md-6 mb-3">
                <a href="#" id="add_billet" class="btn btn-secondary">Ajouter un billet</a>
            </div>
            <div class="col-md-6 mb-3">
                {{ form_row(form.Valider) }}
            </div>
        </div>


        {{ form_rest(form) }}
        {{ form_end(form) }}
    </article>


{% endblock %}
{% block javascripts %}
    <script>
        // Datepicker vue Panier
        var dates = "{{ estDispo.jourFeries.jours_feries }}";
        var myDates = dates.split(',');

        $(".datepicker2")
            .datepicker({
                format: "dd-mm-yyyy",
                startDate: "0d",
                language: "fr",
                daysOfWeekDisabled: "2,0",
                autoclose: true,
                todayHighlight: true,
                endDate: "{{ estDispo.dateLimite }}",
                datesDisabled:myDates
            })
            .change(function () {
                var date = new Date();
                var heureActuel = date.getHours();
                var heureLimite = '{{ constant('AppBundle\\Service\\EstDisponible::HEURE_LIMITE_JOURNEE') }}';
                var todaysDate = '{{ estDispo.date | date('d-m-Y')}}';
                var datePicker = $(this).val();
                if (todaysDate === datePicker){
                    if (heureActuel > heureLimite)
                    {
                        $('.typeBilletJour').val(1);
                    }
                }else{
                    $('.typeBilletJour').val(0);
                }
            });

        // Ajout billets dans vue Panier
        // On récupère la balase <div> en question qui contient l'attribut "data-prototype" qui nous intéresse.
        var $container = $('div#appbundle_commandes_billet');

        // On définit un compteur unique pour nommer les champs qu'on va ajouter dynamiquement
        var index = $container.find(':input').length;

        // On ajoute un nouveau champ à chaque clic sur le lien d'ajout.
        $('#add_billet').click(function (e) {
            addBillet($container);

            e.preventDefault(); // évite qu'un # apparaisse dans l'URL
            return false;
        });

        // On ajoute un premier champ automatiquement s'il n'en existe pas déjà un
        if (index == 0) {
            addBillet($container)
        } else {

            // S'il existe déjà des billets, on ajoute un lien de suppression pour chacun d'entre eux
            $container.children('div').each(function () {
                addDeleteLink($(this));
            });
        }

        // La fonction qui ajoute un formulaire BilletType
        function addBillet($container) {
            // Dans le contenu de l'attribut "data-prototype", on remplace :
            // - le texte "__name__label__" qu'il contient par le label du champ
            // - le texte "__name__" qu'il conien par le numéro du champ
            var template = $container.attr('data-prototype')
                .replace(/__name__label__/g, 'Billet n°' + (index+1))
                .replace(/__name__/g,        index)
            ;

            // On crée un objet jquery qui contient ce template
            var $prototype = $(template);

            // On ajoute au prototype un lien pour pouvoir supprimer le billet
            addDeleteLink($prototype);

            // On ajoute le prototype modifié à la fin de la balise <div>
            $container.append($prototype);

            // Enfin, on incrémente le compteur pour que le prochain ajout se fasse avec un autre numéro
            index++;
        }

        // La fonction qui ajoute un lien de suppressio d'une catégorie
        function addDeleteLink($prototype) {
            // Création du lien
            var $deleteLink = $('<a href="#" class="btn btn-danger">Supprimer<a>');

            // Ajout du lien
            $prototype.append($deleteLink);

            // Ajout du listener sur le clic du lien pour effectivement supprimer la catégorie
            $deleteLink.click(function (e) {
                $prototype.remove();

                e.preventDefault(); // évite qu'un # appraraisse dans l'URL
                return false;
            });
        }
    </script>
{% endblock %}